body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
}

header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20px;
    background-color: #f8f9fa;
    border-bottom: 1px solid #ddd;
}

.logo {
    height: 50px;
}

main {
    padding: 20px;
}

button {
    padding: 10px 20px;
    margin: 5px;
    cursor: pointer;
    background-color: #4CAF50; /* Green */
    color: white;
    border: none;
    border-radius: 5px;
}

#viewAllBtn {
    position: absolute;
    right: 10px;
    top: 10px;
}

#allProductsOverlay {
    position: fixed;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    top: 0;
    left: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

#allProductsOverlay > button {
    margin-bottom: 20px;
}

#allProductsOverlay input[type="text"] {
    margin-bottom: 20px;
    padding: 10px;
    width: 80%;
    border-radius: 5px;
    border: 1px solid #ccc;
}

#allProducts {
    background: white;
    padding: 20px;
    border-radius: 5px;
    max-height: 70%;
    overflow-y: auto;
    width: 80%;
}

#allProducts table {
    width: 100%;
    border-collapse: collapse;
}

#allProducts th, #allProducts td {
    padding: 10px;
    border: 1px solid #ddd;
}

.highlight {
    background-color: yellow;
}

#searchResults div {
    padding: 5px;
    cursor: pointer;
}
